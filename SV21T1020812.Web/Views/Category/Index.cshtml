@model IEnumerable<Category>
@{
	ViewBag.Title = "Quản lý loại hàng";
}

<div class="box box-primary">
	<div class="box-body">
		<!--Form tìm kiếm-->
		<form>
			<div class="input-group">
				<input type="text" class="form-control" 
					    placeholder="Nhập tên loại hàng"
					   name="searchValue"
					   value="@ViewBag.SearchValue"
					   autofocus />
				<div class="input-group-btn">
					<button class="btn btn-info" type="submit">
						<i class="fa fa-search"></i>
					</button>
					<a href="~/Category/Create" class="btn btn-primary" style="margin-left: 5px">
						<i class="fa fa-plus"></i> Bổ sung
					</a>
				</div>
			</div>
		</form>

		<!--Hiển thị kết quả tìm kiếm-->
		<p style="margin: 10px 0 10px 0">Có  <b>@ViewBag.RowCount</b> loại hàng trong tổng số <b>@ViewBag.PageCount </b>trang </p>
		<div class="table-responsive">
			<table class="table table-bordered table-hover table-striped">
				<thead>
					<tr class="bg-primary">
						<th>Tên loại hàng</th>
						<th>Mô tả</th>
						<th style="width:80px"></th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.CategoryName</td>
							<td>@item.Description</td>
							<td class="text-right">
								<a href="~/Category/Edit/@item.CategoryID" class="btn btn-xs btn-info">
									<i class="fa fa-edit"></i>
								</a>
								<a href="~/Category/Delete/@item.CategoryID" class="btn btn-xs btn-danger">
									<i class="fa fa-trash"></i>
								</a>
							</td>
						</tr>
					}

				</tbody>
			</table>
		</div>
		<div class="text-center">
			<ul class="pagination text-center">
				@for (int i = 1; i <= ViewBag.PageCount; i++)
				{
					if (i == ViewBag.Page)
					{
						<li class="active"><a href="#">@i</a></li>
					}
					else
					{
						<li><a href="~/Category?page=@i&searchValue=@ViewBag.SearchValue">@i</a></li>
					}
				}
			</ul>
		</div>
	</div>
</div>